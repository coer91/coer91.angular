{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "coer91.angular": {
      "projectType": "library",
      "root": "projects/coer91.angular",
      "sourceRoot": "projects/coer91.angular/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/coer91.angular/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/coer91.angular/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "documentation": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/documentation",
      "sourceRoot": "projects/documentation",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/documentation/main.ts",
            "tsConfig": "projects/documentation/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              { "glob": "**/*", "input": "projects/documentation/public"},
              { "glob": "**/*", "input": "node_modules/coer91.styles/dist/images", "output": "/coer91/images" }
            ],
            "styles": [
              "node_modules/coer91.styles/dist/coer91.css",
              "projects/coer91.angular/index.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "documentation:build:production"
            },
            "development": {
              "buildTarget": "documentation:build:development"
            }
          },
          "defaultConfiguration": "development"
        } 
      }
    }
  }
}
